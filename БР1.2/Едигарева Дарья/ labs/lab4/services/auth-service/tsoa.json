{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "silently-remove-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "outputDirectory": ".",
    "specVersion": 3,
    "basePath": "/",
    "servers": [{ "url": "/api/auth" }],
    "securityDefinitions": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "basePath": "/",
    "middleware": "express",
    "authenticationModule": "src/middlewares/auth.ts",
    "iocModule": "src/ioc.ts"
  }
}

